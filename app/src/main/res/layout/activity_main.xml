<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">




    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2sp"
        android:layout_marginHorizontal="5dp"
        android:background="@color/AzulOscuro"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Divisas"
            android:textColor="@color/white"
            android:layout_marginLeft="35sp"
            android:layout_marginTop="7dp"
            android:textSize="20sp"
            android:layout_marginVertical="2dp"
            android:layout_marginStart="35sp">

        </TextView>

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="88dp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="-4dp"
        android:layout_marginHorizontal="5dp"
        android:background="@color/AzulClaro"
                >

        <TextView
            android:id="@+id/textoArs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="Ars"
            android:textSize="20sp"
            >

        </TextView>

        <EditText
            android:id="@+id/editext"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/textoArs"
            android:gravity="end"
            tools:ignore="NotSibling"
            android:layout_toEndOf="@id/textoArs"
            android:background="@color/AzulOscuro"
            android:layout_marginLeft="30dp"
            android:inputType="number"
            android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"



            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/argentina99"
            tools:ignore="MissingConstraints,VectorDrawableCompat"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp">


        </ImageView>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/AzulMedio"
        >

         </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="234dp"
        android:layout_marginTop="-4dp"
        android:layout_marginHorizontal="5dp"
        android:background="@color/AzulClaro"
        >

        <TextView
            android:id="@+id/textoCol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView3"
            android:text="Col"
            android:textColor="@color/black"
            android:textSize="20sp"

            >


        </TextView>

        <EditText
            android:id="@+id/editext2"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="end"
            android:layout_toRightOf="@+id/textoCol"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@color/AzulOscuro"
            android:layout_marginLeft="30dp"
            android:inputType="number"
            android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
            />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/col99"
            tools:ignore="MissingConstraints,VectorDrawableCompat"

            >


        </ImageView>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/AzulOscuro"
        >

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientbackground"

        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/botonBorrado"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            android:background="@drawable/button_borrar"
            android:layout_centerInParent="true"

            >

        </androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ars 1"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actualizado"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PolÃ­tica de privacidad"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        >

    </TextView>



</LinearLayout>